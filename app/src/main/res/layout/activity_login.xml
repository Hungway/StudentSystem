<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lthergo.studentsystem.LoginActivity">

    <CheckBox
        android:text="显示密码"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/pwd"
        android:layout_alignLeft="@+id/pwd"
        android:layout_alignStart="@+id/pwd"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwd"
        android:hint="请输入密码"
        android:textColorLink="@android:color/holo_blue_light"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/qq"
        android:layout_alignLeft="@+id/qq"
        android:layout_alignStart="@+id/qq" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/qq"
        android:hint="请输入账号"
        android:textColorLink="@android:color/holo_blue_light"
        style="@style/Widget.AppCompat.EditText"
        android:shadowColor="@android:color/background_dark"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:layout_marginTop="61dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textColorLink="@android:color/holo_blue_light"
        android:textColor="@android:color/background_dark"
        android:textSize="18dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:onClick="login (MainActivity)"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
